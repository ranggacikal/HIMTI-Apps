<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.VerifiedAkun">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Circle_Verified"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="95dp"
        android:src="@drawable/zyro_verified"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/SukseskataSandiBaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Circle_Verified"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:gravity="center"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="46dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Sukses Kata Sandi Baru"
        android:textColor="@color/darkblue"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_below="@+id/SukseskataSandiBaru"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur adipiscing elit. "
        android:textColorHint="@color/black"
        android:textSize="18dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/MaterialHalamanLogin"
        android:layout_width="315dp"
        android:layout_height="70dp"
        android:layout_below="@+id/Circle_Verified"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="313dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/darkblue"
        android:fontFamily="@font/poppins_regular"
        android:text="Masuk Ke Halaman Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</RelativeLayout>