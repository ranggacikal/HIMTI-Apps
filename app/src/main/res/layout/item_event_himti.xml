<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <androidx.cardview.widget.CardView
        android:layout_width="339dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_event"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/img_jadwal_event"
                        android:layout_width="303dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_event" />

                    <TextView
                        android:id="@+id/tv_judul_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="75dp"
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="Event"
                        android:textColor="#FFFFFF"
                        android:textSize="19dp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_judul_event" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/tv_deskripsi_event"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Event Himti Rutin"
                                android:textColor="#FFFFFF" />

                        </RelativeLayout>

                    </ScrollView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/img_date_event"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/img_event"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/date" />

            <TextView
                android:id="@+id/txt_tanggal_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_event"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/img_date_event"
                android:fontFamily="@font/poppins_light"
                android:text="Hari / Tanggal"
                android:textColor="#3F3F3F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tanggal_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tanggal_event"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/img_date_event"
                android:fontFamily="@font/poppins_light"
                android:text="tanggal"
                android:textColor="#3F3F3F"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/rl_detail_event"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="#F0F2FA">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Lihat Detail"
                    android:textColor="#0C159F"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgToDetilEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="284dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_baseline_east_24" />
            </RelativeLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>