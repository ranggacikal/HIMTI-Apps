<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="330dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_centerHorizontal="true"
        android:layout_width="339dp"
        android:layout_height="280dp"
        android:layout_marginTop="38dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_sharing"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/img_jadwal_sharing"
                    android:layout_width="303dp"
                    android:layout_height="150dp"
                    android:src="@drawable/image_sharing" />

                <TextView
                    android:id="@+id/tv_judul_sharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="75dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="Judul"
                    android:textColor="#FFFFFF"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_deskripsi_sharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="100dp"
                    android:text="Membuat landing page menggunakan android studio"
                    android:textColor="#FFFFFF" />


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/img_date"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/img_sharing"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/date" />


            <TextView
                android:id="@+id/txt_tanggal_sharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_sharing"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/img_date"
                android:fontFamily="@font/poppins_light"
                android:text="Hari / Tanggal"
                android:textColor="#3F3F3F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tanggal_sharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_tanggal_sharing"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/img_date"
                android:fontFamily="@font/poppins_light"
                android:text="tanggal"
                android:textColor="#3F3F3F"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/rl_detail_sharing"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="#F0F2FA">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Lihat detail"
                    android:textColor="#0C159F"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgToDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="284dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_baseline_east_24" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>