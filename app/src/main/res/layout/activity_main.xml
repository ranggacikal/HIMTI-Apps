<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.MainActivity">

    <ImageView
        android:id="@+id/gambar_biru"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/kotak_biru_1" />

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foto_2"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="51dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tv_nama_profile"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="57dp"
            android:text="Rafi Ramadhan"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/Halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_below="@id/ll_profile"
        android:layout_marginTop="29dp"
        android:text="HALO,"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Selamat_Datang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Halo"
        android:layout_marginStart="31dp"
        android:layout_marginTop="3dp"
        android:text="Selamat datang di Himti Apps!"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gambar_biru" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/ll_container_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="37dp"
                android:orientation="horizontal">

                <!--Jadwal Sharing-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_jadwal_sharing"
                    android:layout_width="138dp"
                    android:layout_height="146dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkwhite"
                    app:cardCornerRadius="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/toga"
                            android:layout_width="50dp"
                            android:layout_height="43dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="33dp"
                            android:src="@drawable/wisuda" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/toga"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Jadwal Sharing"
                            android:textColor="@color/darkblue"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <!--Data Anggota-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_data_anggota"
                    android:layout_width="138dp"
                    android:layout_height="146dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkwhite"
                    app:cardCornerRadius="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_anggota"
                            android:layout_width="44dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="33dp"
                            android:src="@drawable/orang_banyak" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon_anggota"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="19dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Data Anggota"
                            android:textColor="@color/darkblue"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_container_2"
                android:orientation="horizontal"
                android:layout_below="@id/ll_container_1"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="30dp">

                <!--Struktur Organisasi-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_struktur_akademik"
                    android:layout_width="138dp"
                    android:layout_height="146dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/darkwhite"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_struktur"
                            android:layout_width="42dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="33dp"
                            android:src="@drawable/bagan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon_struktur"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Struktur\n Organisasi"
                            android:textColor="@color/darkblue"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <!--Data Dosen-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_data_dosen"
                    android:layout_width="138dp"
                    android:layout_height="146dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/darkwhite"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon_data_dosen"
                            android:layout_width="45dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="33dp"
                            android:src="@drawable/buku" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="96dp"
                            android:layout_marginBottom="22dp"
                            android:text="Data Dosen"
                            android:textColor="@color/darkblue"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_container_3"
                android:orientation="horizontal"
                android:layout_below="@id/ll_container_2"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="30dp">

                <!--Informasi Akademik-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_informasi_akademik"
                    android:layout_width="138dp"
                    android:layout_height="146dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/darkwhite"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_informasi_akademik"
                            android:layout_width="43dp"
                            android:layout_height="42dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="33dp"
                            android:src="@drawable/tandaseru" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="36dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_below="@id/icon_informasi_akademik"
                            android:text="Informasi Akademik"
                            android:textColor="@color/darkblue"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <!--Acara Himti-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_acara_himti"
                    android:layout_width="138dp"
                    android:layout_height="146dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/darkwhite"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_acara_himti"
                            android:layout_width="45dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="36dp"
                            android:src="@drawable/kalenderbagus" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_acara_himti"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="17dp"
                            android:gravity="center"
                            android:text="Acara Himti"
                            android:textColor="@color/darkblue"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>